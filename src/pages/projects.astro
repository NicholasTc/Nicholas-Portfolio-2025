<style>
  /* Page Header */
  .page-header {
    padding: 140px 32px 60px;
    position: relative;
    z-index: 1;
  }

  .page-header-inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 24px;
    font-size: 14px;
    color: var(--text-muted);
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--accent-blue);
  }

  .page-title {
    font-size: clamp(48px, 6vw, 72px);
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 20px;
    line-height: 1.1;
  }

  .page-title .gradient-text {
    background: var(--gradient-text);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 20px;
    color: var(--text-secondary);
    max-width: 600px;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  /* Filter Tabs */
  .filter-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .filter-tab {
    padding: 10px 20px;
    background: var(--glass);
    border: 1px solid var(--glass-border);
    border-radius: 999px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: var(--font-sans);
  }

  .filter-tab:hover {
    background: var(--surface-hover);
    color: var(--text-primary);
  }

  .filter-tab.active {
    background: var(--gradient-bg);
    border-color: transparent;
    color: white;
    box-shadow: 0 4px 20px var(--glow-blue);
  }

  /* Projects Section */
  .projects-section {
    padding: 60px 32px 120px;
    position: relative;
    z-index: 1;
  }

  .projects-inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 28px;
  }

  .project-card {
    background: var(--glass);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    cursor: pointer;
  }

  .project-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.05), rgba(167, 139, 250, 0.05));
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow: 0 30px 80px -20px rgba(0, 0, 0, 0.5), 0 0 50px -15px var(--glow-blue);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-card.featured {
    grid-column: span 2;
    grid-row: span 2;
  }

  .project-card.tall {
    grid-row: span 2;
  }

  .project-card.hidden {
    display: none;
  }

  .project-image {
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-secondary));
    overflow: hidden;
    position: relative;
  }

  .project-card.featured .project-image {
    height: 400px;
  }

  .project-card.tall .project-image {
    height: 280px;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-icon {
    font-size: 48px;
    opacity: 0.5;
  }

  .project-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(0deg, rgba(6, 8, 13, 0.9) 0%, transparent 50%);
  }

  .project-content {
    padding: 28px;
    position: relative;
    z-index: 1;
  }

  .project-card.featured .project-content {
    padding: 36px;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .project-tag {
    padding: 6px 14px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
    color: var(--accent-blue);
  }

  .project-tag.backend {
    background: rgba(167, 139, 250, 0.1);
    color: var(--accent-purple);
  }

  .project-tag.ai {
    background: rgba(34, 211, 238, 0.1);
    color: var(--accent-cyan);
  }

  .project-tag.frontend {
    background: rgba(34, 197, 94, 0.1);
    color: var(--accent-green);
  }

  .project-tag.wordpress {
    background: rgba(251, 113, 133, 0.1);
    color: var(--accent-rose);
  }

  .project-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .project-card.featured .project-title {
    font-size: 32px;
  }

  .project-arrow {
    width: 40px;
    height: 40px;
    background: var(--surface);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .project-card:hover .project-arrow {
    background: var(--gradient-bg);
    transform: translateX(4px);
  }

  .project-desc {
    font-size: 15px;
