// Footer component with new premium design
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-text">© 2025 Nicholas Chan. Built with ♥ and lots of coffee.</p>
    <div class="footer-links">
      <a href="https://github.com/nicholastc14" target="_blank" rel="noopener" class="footer-link">GitHub</a>
      <a href="https://linkedin.com/in/nicholastc14" target="_blank" rel="noopener" class="footer-link">LinkedIn</a>
      <a href="mailto:nicholastc14@gmail.com" class="footer-link">Email</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 48px 32px;
    border-top: 1px solid var(--glass-border);
    position: relative;
    z-index: 1;
  }

  .footer-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer-text {
    color: var(--text-muted);
    font-size: 14px;
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: 24px;
  }

  .footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: var(--accent-blue);
  }

  @media (max-width: 768px) {
    .footer {
      padding: 32px 20px;
    }

    .footer-inner {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .footer-links {
      gap: 20px;
    }
  }
</style>

